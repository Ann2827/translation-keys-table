{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2015.collection"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "./src",
    "noFallthroughCasesInSwitch": true,
    //    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./types",
    "experimentalDecorators": true
  },
  "include": [
    "src"
  ],
  "exclude": ["dist", "node_modules", "example", "dist-test"]
}
